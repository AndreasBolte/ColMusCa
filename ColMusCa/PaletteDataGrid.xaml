        mc:Ignorable="d"
        Title="Palette Farbtabelle" Height="1080" Width="1920" Closed="PalDaGriClosed" HorizontalAlignment="Left" VerticalAlignment="Top" WindowState="Maximized" WindowStartupLocation="CenterScreen">
